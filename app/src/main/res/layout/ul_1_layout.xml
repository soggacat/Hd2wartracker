<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="20dp">

    <!-- Заголовок PAGE 1 -->

    <TextView
        android:id="@+id/page1_title"
        android:layout_width="93dp"
        android:layout_height="25dp"
        android:background="@drawable/card_bg"
        android:paddingStart="20dp"
        android:text="Page 1"
        android:textColor="#FFE600"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/page1_frame"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/page1_frame"
        android:layout_width="348dp"
        android:layout_height="203dp"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page1_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/page1_grid"
            android:layout_width="324dp"
            android:layout_height="180dp">


            <ImageButton
                android:id="@+id/ul_p1_2"
                android:layout_width="58dp"
                android:layout_height="56dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageButton>

            <ImageButton
                android:id="@+id/ul_p1_8"
                android:layout_width="60dp"
                android:layout_height="113dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/ul_p1_7"
                android:layout_width="60dp"
                android:layout_height="113dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ul_p1_6" />

            <ImageButton
                android:id="@+id/ul_p1_4"
                android:layout_width="60dp"
                android:layout_height="113dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_4"
                app:layout_constraintEnd_toStartOf="@+id/ul_p1_6"
                app:layout_constraintStart_toEndOf="@+id/ul_p1_1" />

            <ImageButton
                android:id="@+id/ul_p1_6"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ul_p1_3"
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ul_p1_1" />

            <ImageButton
                android:id="@+id/ul_p1_1"
                android:layout_width="124dp"
                android:layout_height="113dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ul_p1_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ul_p1_5"
                android:layout_width="58dp"
                android:layout_height="54dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ul_p1_4"
                app:layout_constraintStart_toStartOf="@+id/ul_p1_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>