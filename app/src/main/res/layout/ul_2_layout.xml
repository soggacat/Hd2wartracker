<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="20dp">

    <!-- Заголовок PAGE 1 -->
    <TextView
        android:id="@+id/page1_title"
        android:layout_width="93dp"
        android:layout_height="25dp"
        android:background="@drawable/card_bg"
        android:paddingStart="20dp"
        android:text="Page 2"
        android:textColor="#FFE600"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/page1_frame"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/page1_frame"
        android:layout_width="348dp"
        android:layout_height="203dp"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page1_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/page1_grid"
            android:layout_width="324dp"
            android:layout_height="180dp">


            <ImageButton
                android:id="@+id/ul_p2_5"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/ul_p2_4"
                android:layout_width="123dp"
                android:layout_height="172dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="8dp" />

            <ImageButton
                android:id="@+id/ul_p2_1"
                android:layout_width="60dp"
                android:layout_height="53dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                tools:layout_editor_absoluteX="257dp"
                tools:layout_editor_absoluteY="8dp" />

            <ImageButton
                android:id="@+id/ul_p2_3"
                android:layout_width="124dp"
                android:layout_height="115dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="80dp" />

            <ImageButton
                android:id="@+id/ul_p2_2"
                android:layout_width="59dp"
                android:layout_height="53dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"

                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="27dp" />

            <ImageButton
                android:id="@+id/ul_p2_6"
                android:layout_width="62dp"
                android:layout_height="112dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ph"
                tools:layout_editor_absoluteX="262dp"
                tools:layout_editor_absoluteY="65dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>